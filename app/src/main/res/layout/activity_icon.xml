<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".IconActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:padding="13dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/back" />
        <ImageView
            android:id="@+id/more"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:padding="17dp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/more_vert"
            app:tint="#222222" />
    </RelativeLayout>



    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pd_regu"
        android:gravity="center"
        android:text="@string/icon"
        android:textColor="#343434"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/pd_light"
        android:gravity="center"
        android:text="@string/icon_text"
        android:textColor="#3e3e3e"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/check1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/iv1"
                android:layout_alignEnd="@id/iv1"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/check" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pd_regu"
                android:text="@string/basic"
                android:textColor="#525252" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ok_1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/name1"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:strokeColor="#186599"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pd_regu"
                    android:gravity="center"
                    android:text="사용중"
                    android:textColor="#186599"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/pa_maps" />

            <ImageView
                android:id="@+id/check2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/iv2"
                android:layout_alignEnd="@id/iv2"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/check" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pd_regu"
                android:text="PA Maps"
                android:textColor="#525252" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ok_2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/name2"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#7CA9C8"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pd_regu"
                    android:gravity="center"
                    android:text="교체하기"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/pa_cloud" />

            <ImageView
                android:id="@+id/check3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/iv3"
                android:layout_alignEnd="@id/iv3"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/check" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pd_regu"
                android:text="PA Cloud"
                android:textColor="#525252" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ok_3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/name3"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#7CA9C8"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pd_regu"
                    android:gravity="center"
                    android:text="교체하기"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/pa_video" />

            <ImageView
                android:id="@+id/check4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/iv4"
                android:layout_alignEnd="@id/iv4"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/check" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pd_regu"
                android:text="PA Video"
                android:textColor="#525252" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ok_4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/name4"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#7CA9C8"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pd_regu"
                    android:gravity="center"
                    android:text="교체하기"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
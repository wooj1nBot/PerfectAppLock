<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    tools:context=".PatternActivity">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:clickable="true"
            android:fontFamily="@font/pd_regu"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/change_pattern"
            android:textColor="#186599"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pd_medium"
        android:gravity="center"
        android:text="@string/pin_title"
        android:textColor="#464646"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pd_regu"
        android:gravity="center"
        android:text="@string/pin_text"
        android:textColor="#464646"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/elip" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/elip" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/elip" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/elip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="1"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="2"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="3"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="4"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="5"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="6"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv7"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="7"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="8"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="9"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:fontFamily="@font/pd_regu"
                android:gravity="center"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv0"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onClick"
                android:text="0"
                android:textColor="#2B2B2B"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:fontFamily="@font/pd_regu"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClick"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                app:srcCompat="@drawable/remove" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:fontFamily="@font/pd_regu"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:text="@string/reset"
        android:textColor="#186599"
        android:textSize="17sp"
        android:visibility="gone" />

</RelativeLayout>